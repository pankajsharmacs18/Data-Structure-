package linked;

import java.util.Scanner;

class Node
{
    Node next;
    int data;
    public Node(int data)
    {
        this.data=data;
        next=null;
    }
}
class LinkImplement{
    Node head;
    public void inputList(int data)
    {
        Node new_node=new Node(data);
        if(head==null)
        {
            head=new Node(data);
            return;
        }
        new_node.next=null;
        Node temp=head;
        while (temp.next!=null)
        {
            temp=temp.next;
        }
        temp.next=new_node;
        return;
    }
    public void printList()
    {
        if(head==null)
        {
            System.out.println("List is empty :");
            return;
        }
        System.out.println("enter lsit is : ");
        Node tempHead=head;
        while (tempHead!=null)
        {
            System.out.print(tempHead.data+" ");
            tempHead=tempHead.next;
        }
    }

public void nTHnodes(int nth)
{
    if(head==null)
    {
        System.out.println("List is Empty :");
        return;
    }
    int length=0;
    Node tempHead=head;
    while (tempHead!=null)
    {
        length++;
        tempHead=tempHead.next;
    }
    if(nth>length)
    {
        System.out.println(nth+" Elemnt is not present in list : ");
        return;
    }
    else
        {
            tempHead=head;
            while (tempHead!=null&&nth!=0)
            {
                tempHead=tempHead.next;
                nth--;
            }
            System.out.println(nth+" Element is "+tempHead.data);
        }
}
}
public class LinkedList {

    public static void main(String... PankajSharma)
    {
        int choose2;
            LinkImplement obj=new LinkImplement();
        Scanner inpt=new Scanner(System.in);
            System.out.println(" Enter\n 1 for inseeted element\n 2  for print  ");
            int coose=inpt.nextInt();
            if(coose==1) {
                do {
                    System.out.println("Enter value :");
                    obj.inputList(inpt.nextInt());
                    System.out.println("Enter 1 for more in value ");
                    choose2 = inpt.nextInt();
                } while (choose2 == 1);
                System.out.println("\nenter element is : ");
                obj.printList();
            }
            else if(coose==2)
            {
                obj.printList();
            }
            else
                {
                    System.out.println("you entered wrong input :1");
                }
        System.out.println("enter element to be search :");
   obj.nTHnodes(inpt.nextInt());
        obj.printList();

    }
}
