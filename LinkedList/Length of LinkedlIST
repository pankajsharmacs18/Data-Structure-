package linked;

import java.util.Scanner;

class Node
{
    Node next;
    int data;
    public Node(int data)
    {
        this.data=data;
        next=null;
    }
}
class LinkImplement{
    Node head;
    public void inputList(int data)
    {
        Node new_node=new Node(data);
        if(head==null)
        {
            head=new Node(data);
            return;
        }
        new_node.next=null;
        Node temp=head;
        while (temp.next!=null)
        {
            temp=temp.next;
        }
        temp.next=new_node;
        return;
    }
    public void printList()
    {
        if(head==null)
        {
            System.out.println("List is empty :");
            return;
        }
        System.out.println("enter lsit is : ");
        Node tempHead=head;
        while (tempHead!=null)
        {
            System.out.print(tempHead.data+" ");
            tempHead=tempHead.next;
        }
        public void length()
        {
        if(head==null)
        {
        System.out.println("list is empty :");
        return;
        Node tempHead=head;
        int count=0;
        while(tempHead!=null)
        {
        count++;
        tempHead=teampHead.next;
        }
        System.out.println("length of list is :"+count);
        }
        }
    }
    
public class LinkedList {

    public static void main(String... PankajSharma)
