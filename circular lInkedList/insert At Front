package circularList;

import java.util.Scanner;

class Node
{
    Node next;
    int data;
    Node(int data)
    {
        this.data=data;
    }
}
class ListImplement
{
    Node head=null;
    Node tail=null;
    public void insertValue(int value)
    {
        Node newVal=new Node(value);
        if(head==null)
        {
            head=newVal;
            tail=newVal;
            tail.next=head;

        }
        tail.next=newVal;
        tail=newVal;
        tail.next=head;
    }
    public void  display()
    {
        Node temp=head;
        while (temp!=tail)
        {
            System.out.print(temp.data+" ");
            temp=temp.next;
        }
        System.out.print(temp.data);
    }

    public void isertAtFirst(int value)
    {
        Node newVal=new Node(value);
        if(head==null)
        {
            head=newVal;
            tail=newVal;
            tail.next=head;
            return;
        }
        newVal.next=head;
        head=newVal;
        tail.next=head;


    }
}
public class CircularMain
{
    public static void main(String... PankajSharma)
    {
        Scanner sc=new Scanner(System.in);
        ListImplement obj=new ListImplement();
        int chose=0;
        do
            {
                System.out.println("Enter value to be insert : ");
                obj.insertValue(sc.nextInt());
                System.out.println("Enter 1 for more value : ");
                chose=sc.nextInt();
            }while (chose==1);
        obj.display();
        obj.isertAtFirst(5);
        System.out.println(" After Insert First Nodes  :\n");
        obj.display();
        System.out.println("\n Pankaj Sharma : ");
    }
}
